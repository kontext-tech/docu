@model Kontext.Data.Models.ViewModels.PagedViewModel<object, BlogCategory>

@{
    ViewData["Title"] = SharedLocalizer["Manage blog categories"];
    ViewData.AddActivePage(ManageNavPages.ManageBlogCategories);
}


@if (User.HasPermissionClaim(BlogApplicationPermissionProvider.ManageBlogs))
{
    <a class="btn btn-primary mb-3" asp-action="Create"><i class="fa fa-plus-circle"></i> @SharedLocalizer["Add blog category"]</a>
}

<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ChildViewModels.FirstOrDefault().UniqueName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ChildViewModels.FirstOrDefault().Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ChildViewModels.FirstOrDefault().Active)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ChildViewModels.FirstOrDefault().Blog)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ChildViewModels.FirstOrDefault().Language)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ChildViewModels)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.UniqueName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td class="@(item.Active?"":"bg-warning")">
                        @Html.DisplayFor(modelItem => item.Active)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Blog.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Language.LanguageCode)
                    </td>
                    <td>
                        @if (User.HasPermissionClaim(BlogApplicationPermissionProvider.ManageBlogCategories))
                        {
                            <a asp-action="Edit" asp-route-id="@item.BlogCategoryId" class="btn btn-outline-success"><i class="fa fa-edit"></i> @SharedLocalizer["Edit"]</a>
                            <a asp-action="MergeCategory" asp-route-id="@item.BlogCategoryId" class="btn btn-outline-warning"><i class="fa fa-edit"></i> @SharedLocalizer["Merge"]</a>
                        }

                        @if (User.HasPermissionClaim(BlogApplicationPermissionProvider.ViewBlogCategories))
                        {
                            <a asp-action="Details" asp-route-id="@item.BlogCategoryId" class="btn btn-outline-primary"><i class="fa fa-eye"></i> @SharedLocalizer["View"]</a>
                        }
                        @*<a asp-action="Delete" asp-route-id="@item.BlogCategoryId">Delete</a>*@
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


<!--Pager-->
<nav aria-label="Page navigation">
    <ul class="pagination pagination-lg">
        <li class='@(Model.HasPreviousPage ? "page-item" : "page-item disabled")'>
            <a class="page-link " asp-route-page="@Model.PreviousPage" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
                <span class="sr-only">Previous</span>
            </a>
        </li>

        @for (int i = Model.StartPage; i <= Model.EndPage; i++)
        {
            <li class='page-item @(i == Model.CurrentPage ? "active" : "")'><a class="page-link" asp-route-page="@i">@i</a></li>
        }

        <li class='@(Model.HasNextPage ? "page-item" : "page-item disabled")'>
            <a class="page-link" asp-route-page="@Model.NextPage" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
                <span class="sr-only">Next</span>
            </a>
        </li>
    </ul>
</nav>