@model ForgotPasswordViewModel
@{
    ViewData["Title"] = SharedLocalizer["Forgot your password?"];
}
<div class="container bg-light">
    <h2>@ViewData["Title"]</h2>
    <form asp-action="ForgotPassword" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Email"></label>
            <div class="input-group">
                <span class="input-group-append"><label class="input-group-text"><i class="fa fa-envelope"></i></label></span>
                <input asp-for="Email" class="form-control" placeholder="@SharedLocalizer["Email"]" />
            </div>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:100%"><i class="fa fa-arrow-right"></i> @SharedLocalizer["Submit"]</button>
    </form>
</div>
@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
