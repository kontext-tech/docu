{
  "ConnectionStrings": {
    "DefaultConnection": "Filename=App_Data/kontext.db"
  },
  "Logging": {
    "IncludeScopes": false,
    "LogLevel": {
      "Default": "Warning"
    }
  },
  "ContextConfig": {
    "SiteName": "Kontext Docu",
    "SiteDomain": "example-domain.com",
    "SiteNewDomain": "example-domain.com",
    "ShowNewDomainReminder": false,
    "AppVersion": "1.0.0-alpha.1",
    "SiteAuthor": "kontext.tech",
    "SiteKeyWords": "Kontext, Docu, CMS, .NET Core",
    "SiteDescription": "Kontext Docu CMS",
    "ImageFolderPath": "./images/uploaded/",
    "DefaultApplicationId": "00000000-0000-0000-0000-000000000000",
    "SecurityConfig": {
      "UserRoleName": "User",
      "AdministratorRoleName": "Administrator"
    },
    "BlogConfig": {
      "BlogPostCountPerPage": "10",
      "BlogLatestPostCount": "6",
      "BlogLatestCommentCount": "6",
      "AllowComments": "true",
      "RssItemsCount": "30",
      "HomePageBlogLatestPostCount": "6",
      "HomePageBlogLatestCommentCount": "6",
      "AutoApproveComment": "true",
      "DefaultLanguageLocale": "en",
      "KeyWordsSeperator": ";"
    },
    "EmailConfig": {
      "FromEmail": "no-reply@example-domain.com",
      "FromEmailDisplayName": "[Docu]",
      "EnableSSl": "true",
      "Host": "mail.example-domain.com",
      "PasswordConfigurationName": "PWD_EMAIL_ACCT",
      "Port": "25",
      "UserName": "no-reply@example-domain.com"
    },
    "Templates": {
      "EmailTemplates": [
        {
          "TemplateName": "Email.Register.Confirm",
          "TemplateFilePath": "./Templates/EmailTemplates/Email.Register.Confirm.html",
          "TemplateEmailTitle": "Account activation",
          "TemplateLanguageLocale": ""
        },
        {
          "TemplateName": "Email.Register.Confirm",
          "TemplateFilePath": "./Templates/EmailTemplates/Email.Register.Confirm.zh-CN.html",
          "TemplateEmailTitle": "账号激活",
          "TemplateLanguageLocale": "zh-CN"
        },
        {
          "TemplateName": "Email.Register.Confirm",
          "TemplateFilePath": "./Templates/EmailTemplates/Email.Register.Confirm.zh.html",
          "TemplateEmailTitle": "账号激活",
          "TemplateLanguageLocale": "zh"
        },
        {
          "TemplateName": "Email.Reset.Password",
          "TemplateFilePath": "./Templates/EmailTemplates/Email.Reset.Password.html",
          "TemplateEmailTitle": "Reset password",
          "TemplateLanguageLocale": ""
        },
        {
          "TemplateName": "Email.Reset.Password",
          "TemplateFilePath": "./Templates/EmailTemplates/Email.Reset.Password.zh-CN.html",
          "TemplateEmailTitle": "密码重置",
          "TemplateLanguageLocale": "zh-CN"
        },
        {
          "TemplateName": "Email.Reset.Password",
          "TemplateFilePath": "./Templates/EmailTemplates/Email.Reset.Password.zh.html",
          "TemplateEmailTitle": "密码重置",
          "TemplateLanguageLocale": "zh"
        },
        {
          "TemplateName": "Email.New.Comment",
          "TemplateFilePath": "./Templates/EmailTemplates/Email.New.Comment.html",
          "TemplateEmailTitle": "New comment notification",
          "TemplateLanguageLocale": ""
        },
        {
          "TemplateName": "Email.New.Comment",
          "TemplateFilePath": "./Templates/EmailTemplates/Email.New.Comment.zh-CN.html",
          "TemplateEmailTitle": "新评论提示",
          "TemplateLanguageLocale": "zh-CN"
        },
        {
          "TemplateName": "Email.New.Comment",
          "TemplateFilePath": "./Templates/EmailTemplates/Email.New.Comment.zh.html",
          "TemplateEmailTitle": "新评论提示",
          "TemplateLanguageLocale": "zh"
        }
      ]
    }
  },
  "XmlRpc": {
    "GenerateSummary": "true",
    "SummaryEndpoint": "/api/xmlrpc/summary",
    "RsdEndpoint": "/api/xmlrpc/rsd",
    "Endpoint": "/api/xmlrpc/endpoint",
    "EngineName": "AspNetCore.XmlRpc",
    "BlogIdTokenName": "blogId",
    "HomePageEndpointPattern": "/Blog/{blogId}",
    "ManifestEndpoint": "/api/xmlrpc/manifest"
  }
}
